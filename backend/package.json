{
  "name": "aura-finance-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --watch register-ts-node.mjs --ext ts --exec \"node register-ts-node.mjs\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "typeorm:migration:generate": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:generate -d src/database/data-source.ts",
    "typeorm:migration:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run -d src/database/data-source.ts",
    "seed": "node --loader ts-node/esm src/database/seeds/index.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.6",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.18",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^22.16.5",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
